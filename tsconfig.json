{
  "compilerOptions": {
    "baseUrl": "src",
    "moduleResolution": "Node",
    "outDir": "./dist/",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*",
    "./custom-modules.d.ts"
  ]
}
